
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ChampWebApp.Models.Dtos.UserRegisterDto;

<form asp-action=Register asp-controller=User>
    <input type=text asp-for=Name placeholder=Name>
    <span asp-validation-for=Name></span>
    <input type=text asp-for=Email placeholder=Email>
    <span asp-validation-for=Email></span>
    <input type=text asp-for=Password placeholder=Password>
    <span asp-validation-for=Password></span>
    <input type=submit value=send>
</form>